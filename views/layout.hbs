<script>

    $(".panel-heading").click(function() {
        var thisDiv = $(this);

        $.get( "api/chats/previous/" + $(this).attr("data-date"), function( data ) {
            $.each(data, function(k, v) {
                thisDiv.prev().children("ul").prepend(
                    '<li class="list-group-item"><b>' + v.name + '</b>: ' + v.message + '</li>'
                );
            });
            thisDiv.prev().children("ul").scrollTop(thisDiv.prev().children("ul")[0].scrollHeight);
        });
    });
</script>

