<!-- Begin page content -->
<div class="container">
    <div class="page-header col-md-12">
        <div class="col-md-6">
            <img src="images/NEW-LOGO-BUG-VIDEO.png" width="65px" style="float:left;margin-right:10px;" />
            <h1 style="margin-top:10px;"> Chatroll Monitor</h1>
        </div>
    </div>

    <div class="btn-group col-md-12" style="margin-bottom:15px;" role="group" aria-label="...">
        <a href="/300" type="button" class="btn btn-default col-md-4">Show 300 Records</a>
        <a href="/1000" type="button" class="btn btn-default col-md-4">Show 1000 Records</a>
        <a href="/100000000000" type="button" class="btn btn-default col-md-4">Show All Records</a>
    </div>

    <p style="text-align:center;">This is a list of all the CIG Posts made in the RSI Chat. If you click on the name it will show
        past chats leading up to it for context.</p>

    <div class="panel-group" role="tablist">
        <div class="panel panel-default">
            {{#each chats}}
                {{#if_eq date}}
                    <h3 style="text-align:center;margin-bottom:15px;">{{#convertDateToDay}}{{date}}{{/convertDateToDay}}</h3>
                {{/if_eq}}

                {{#setLocalsDate}}{{#convertDateToDay}}{{date}}{{/convertDateToDay}}{{/setLocalsDate}}

                <div id="collapseListGroup{{id}}" style="padding-left:15px;" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapseListGroupHeading{{id}}" aria-expanded="true">
                    <ul class="list-group" onmouseover="document.body.style.overflow='hidden';" onmouseout="document.body.style.overflow='auto';"
                        style="height:200px; overflow: scroll;">
                    </ul>
                </div>

                <div class="panel-heading" role="button"
                     data-date="{{date}}" data-toggle="collapse" href="#collapseListGroup{{id}}"
                     aria-expanded="false" aria-controls="collapseListGroup{{id}}" id="collapseListGroupHeading{{id}}" >
                    <h4 class="panel-title" data-toggle="tooltip" data-placement="top" title="{{#convertDateToLocal}}{{date}}{{/convertDateToLocal}}">
                        <a class="">
                            <b>{{name}}</b>:
                            {{message}}
                        </a>
                    </h4>
                </div>
            {{/each}}
        </div>
    </div>
</div>